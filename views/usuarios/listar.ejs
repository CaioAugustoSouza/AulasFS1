<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tabela /</span> Lista de Usuários</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Usuarios cadastrados</h5>
            <div class="table-responsive text-nowrap">
                <div class="card-body">
                    <a href="/usuarios/cadastrar" class="btn btn-primary">+ Cadastrar Usuário</a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Ativo</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        <% for (let i = 0; i<usuarios.length; i++) { %>
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong><%= usuarios[i].id  %></strong></td>
                            <td><%= usuarios[i].nome  %></td>
                            <td><%= usuarios[i].email  %></td>
                            <td><% if (usuarios[i].ativo){ %>
                                <%= 'Ativo' %>
                                <%} else { %>
                                <%= 'Inativo' %>                                    
                                <% } %>
                            </td>
                        </tr>
                        <% }  %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>